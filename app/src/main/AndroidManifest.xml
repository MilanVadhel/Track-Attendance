<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.wayfortech.ebalsabha">

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/logo"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".SplashActivity2"
            android:theme="@style/SplashScreen"
            android:launchMode="singleTop"></activity>
        <activity
            android:name=".BirthdayActivity"
            android:parentActivityName=".MainActivity"
            android:launchMode="singleTop"/>
        <activity
            android:name=".MonthWiseReportActivity"
            android:parentActivityName=".ReportGenerationActivity"
            android:launchMode="singleTop"/>
        <activity
            android:name=".DateWiseReportActivity"
            android:parentActivityName=".ReportGenerationActivity"
            android:launchMode="singleTop"/>
        <activity
            android:name=".ReportGenerationActivity"
            android:launchMode="singleTop"
            android:parentActivityName=".MainActivity"
            />
        <activity
            android:name=".UpdateProfile"
            android:parentActivityName=".MainActivity"
            android:launchMode="singleTop"/>
        <activity
            android:name=".ChildListActivity"
            android:parentActivityName=".MainActivity"
            android:launchMode="singleTop"/>
        <activity android:name=".GenerateReportActivity"
            android:launchMode="singleTop"/>
        <activity
            android:name=".TakeAttendanceActivity"
            android:parentActivityName=".MainActivity"
            android:launchMode="singleTop"/>
        <activity
            android:name=".AddNewChildActivity"
            android:parentActivityName=".MainActivity"
            android:launchMode="singleTop"/>
        <activity
            android:name=".SplashActivity"
            android:theme="@style/SplashScreen"
            android:launchMode="singleTop">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".MainActivity"
            android:launchMode="singleTop"
            android:theme="@style/MainScreen" />
    </application>

</manifest>