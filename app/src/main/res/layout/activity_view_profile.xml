<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".UpdateProfile"
    android:padding="10dp"
    android:id="@+id/viewProfileAcitivity"
    android:gravity="center">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp">

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/Profile_childSurnameInputLayout"
            style="@style/TextInputLayout"
            android:layout_width="160dp"
            android:layout_height="60sp"
            android:hint="Surname"
            app:layout_constraintTop_toBottomOf="@+id/Title"
            app:layout_constraintLeft_toLeftOf="@+id/Title"
            android:layout_marginTop="30dp">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/Profile_childSurnameEditText"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                style="@style/EditText"
                android:inputType="text" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            style="@style/TextInputLayout"
            android:layout_width="160dp"
            android:layout_height="60sp"
            android:hint="Name"
            android:id="@+id/Profile_childNameInputLayout"
            app:layout_constraintBottom_toBottomOf="@+id/Profile_childSurnameInputLayout"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/Profile_childSurnameInputLayout">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/Profile_childNameEditText"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:inputType="text"
                style="@style/EditText"/>
        </com.google.android.material.textfield.TextInputLayout>
        <com.google.android.material.textfield.TextInputLayout
            style="@style/TextInputLayout"
            android:layout_width="160dp"
            android:layout_height="60sp"
            android:hint="Fathername"
            android:id="@+id/Profile_childFatherNameInputLayout"
            app:layout_constraintTop_toBottomOf="@+id/Profile_childSurnameInputLayout"
            app:layout_constraintLeft_toLeftOf="@+id/Profile_childSurnameInputLayout"
            >
            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/Profile_childFatherNameEditText"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:inputType="text"
                style="@style/EditText"/>
        </com.google.android.material.textfield.TextInputLayout>
        <com.google.android.material.textfield.TextInputLayout
            style="@style/TextInputLayout"
            android:layout_width="160dp"
            android:layout_height="60sp"
            android:hint="MotherName"
            android:id="@+id/Profile_childMotherNameInputLayout"
            app:layout_constraintTop_toBottomOf="@+id/Profile_childNameInputLayout"
            app:layout_constraintLeft_toLeftOf="@+id/Profile_childNameInputLayout"
            >
            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/Profile_childMotherNameEditText"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:inputType="text"
                style="@style/EditText"/>
        </com.google.android.material.textfield.TextInputLayout>
        <com.google.android.material.textfield.TextInputLayout
            style="@style/TextInputLayout"
            android:layout_width="160dp"
            android:layout_height="60sp"
            android:hint="DOB"
            android:id="@+id/Profile_childDOBInputLayout"
            app:layout_constraintTop_toBottomOf="@+id/Profile_childFatherNameInputLayout"
            app:layout_constraintLeft_toLeftOf="@+id/Profile_childFatherNameInputLayout"
            >
            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/Profile_childDOBEditText"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:inputType="text"
                style="@style/EditText"/>
        </com.google.android.material.textfield.TextInputLayout>
        <Button
            android:id="@+id/Profile_DOBTakerButton"
            android:layout_width="120dp"
            android:layout_height="50dp"
            android:layout_marginTop="5dp"
            style="@style/Button"
            android:text="Date"
            android:padding="5dp"
            android:drawableEnd="@drawable/ic_calender"
            app:layout_constraintLeft_toLeftOf="@id/Profile_childMotherNameInputLayout"
            app:layout_constraintTop_toBottomOf="@+id/Profile_childMotherNameInputLayout">
        </Button>
        <com.google.android.material.textfield.TextInputLayout
            style="@style/TextInputLayout"
            android:layout_width="160dp"
            android:layout_height="60sp"
            android:hint="Contact "
            android:id="@+id/Profile_childContactNoInputLayout"
            app:layout_constraintLeft_toLeftOf="@id/Profile_childDOBInputLayout"
            app:layout_constraintTop_toBottomOf="@id/Profile_childDOBInputLayout"
            >
            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/Profile_childContactNoEditText"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:inputType="number"
                style="@style/EditText"/>
        </com.google.android.material.textfield.TextInputLayout>
        <com.google.android.material.textfield.TextInputLayout
            style="@style/TextInputLayout"
            android:layout_width="160dp"
            android:layout_height="60sp"
            android:hint="Whatsapp"
            android:id="@+id/Profile_childWhatsappNoInputLayout"
            app:layout_constraintTop_toBottomOf="@+id/Profile_childDOBInputLayout"
            app:layout_constraintLeft_toLeftOf="@+id/Profile_childMotherNameInputLayout"
            >
            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/Profile_childWhatsappNoEditText"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:inputType="number"
                style="@style/EditText"/>
        </com.google.android.material.textfield.TextInputLayout>
        <com.google.android.material.textfield.TextInputLayout
            style="@style/TextInputLayout"
            android:layout_width="160dp"
            android:layout_height="60sp"
            android:hint="Home No"
            android:id="@+id/Profile_childHomeNoImputLayout"
            app:layout_constraintLeft_toLeftOf="@id/Profile_childContactNoInputLayout"
            app:layout_constraintTop_toBottomOf="@id/Profile_childContactNoInputLayout"
            >
            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/Profile_childHomeNoEditText"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:inputType="number"
                style="@style/EditText"/>
        </com.google.android.material.textfield.TextInputLayout>
        <com.google.android.material.textfield.TextInputLayout
            style="@style/TextInputLayout"
            android:layout_width="160dp"
            android:layout_height="60sp"
            android:hint="Part No"
            android:id="@+id/Profile_childPartNoInputLayout"
            app:layout_constraintTop_toBottomOf="@+id/Profile_childWhatsappNoInputLayout"
            app:layout_constraintLeft_toLeftOf="@+id/Profile_childWhatsappNoInputLayout"
            >
            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/Profile_childPartNoEditText"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:inputType="text"
                style="@style/EditText"/>
        </com.google.android.material.textfield.TextInputLayout>
        <com.google.android.material.textfield.TextInputLayout
            style="@style/TextInputLayout"
            android:layout_width="match_parent"
            android:layout_height="60sp"
            android:hint="Society Name"
            android:id="@+id/Profile_childSocietyNameInputLayout"
            app:layout_constraintTop_toBottomOf="@+id/Profile_childHomeNoImputLayout"
            app:layout_constraintLeft_toLeftOf="@+id/Profile_childHomeNoImputLayout"
            app:layout_constraintLeft_toRightOf="@+id/Profile_childPartNoInputLayout"
            >
            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/Profile_childSocietyNameEditText"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:inputType="text"
                style="@style/EditText"/>
        </com.google.android.material.textfield.TextInputLayout>

        <Button
            android:id="@+id/Profile_updateChildInfoButton"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            style="@style/Button"
            android:text="UPDATE"
            app:layout_constraintTop_toBottomOf="@id/Profile_childSocietyNameInputLayout"
            app:layout_constraintLeft_toLeftOf="@+id/Profile_childSocietyNameInputLayout"
            app:layout_constraintRight_toRightOf="@id/Profile_childSocietyNameInputLayout"
            android:layout_marginTop="50dp"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</RelativeLayout>